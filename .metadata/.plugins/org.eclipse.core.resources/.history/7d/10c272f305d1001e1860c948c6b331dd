package ex_06;
import java.util.Scanner;
public class Main {
	
	public static long calcularFatorial(int numero) {
        // Verifica se o número é não-negativo
        if (numero < 0) {
            throw new IllegalArgumentException("O fatorial não está definido para números negativos.");
        }

        // Inicializa o fatorial como 1
        long fatorial = 1;

        // Calcula o fatorial usando um loop
        for (int i = 1; i <= numero; i++) {
            fatorial *= i;
        }

        // Retorna o fatorial calculado
        return fatorial;
    }

	public static void main(String[] args) {
		// 6. Crie um programa que solicite ao usuário um número e calcule o fatorial desse número.
		
		try (Scanner readScanner = new Scanner(System.in)){
			
			int numDigitado;
			
			System.out.println("Digite um número: ");
			numDigitado = readScanner.nextInt();
			
			// Número para o qual queremos calcular o fatorial

	        // Calcula o fatorial
	        long fatorial = calcularFatorial(numDigitado);

	        // Exibe o resultado
	        System.out.println("O fatorial de " + numDigitado + " é: " + fatorial);
			
		}

	}

}
