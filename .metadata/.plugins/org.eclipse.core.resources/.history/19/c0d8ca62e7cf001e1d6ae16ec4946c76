package ex_03;
import java.util.Scanner;
public class Main {

	public static void main(String[] args) {
		try (Scanner read = new Scanner(System.in) ){
			String text;
			double respPerg,areaQuadrado,ladoQuadrado;
			text = """
					1. Calcular área do 4. quadrado
					-------------------------------
					2. Calcular área do circulo.
					""";
			
			
			System.out.println(text);
			respPerg = read.nextInt();
			if (respPerg==1) {
				System.out.println("Digite o tamanho dos lados do quadrado: ");
				ladoQuadrado = read.nextDouble();
				areaQuadrado = Math.pow(areaQuadrado, ladoQuadrado);
			}
			
		}
	}

}
